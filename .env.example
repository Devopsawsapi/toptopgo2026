APP_NAME=TopTopGo
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=toptopgo
DB_USERNAME=postgres
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=database
SESSION_LIFETIME=120

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@toptopgo.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# PAYMENT CONFIGURATION
# ============================================

PAYMENT_DEFAULT_PROVIDER=peex

# Platform fees
PLATFORM_COMMISSION_PERCENT=15
MINIMUM_COMMISSION=100
ESCROW_HOLD_HOURS=24

# ============================================
# PEEX PAYMENT GATEWAY (Primary)
# Documentation: https://peex-api-docs.peexit.com/
# ============================================

PEEX_SANDBOX=true
PEEX_BASE_URL=https://sandbox.peexit.com/api/v1/
PEEX_PRODUCTION_URL=https://api.peexit.com/api/v1/
PEEX_SECRET_KEY=your-peex-secret-key-here
PEEX_WEBHOOK_SECRET=your-peex-webhook-secret

# ============================================
# MTN MOBILE MONEY
# ============================================

MTN_MOMO_BASE_URL=https://sandbox.momodeveloper.mtn.com
MTN_MOMO_SUBSCRIPTION_KEY=your-mtn-subscription-key
MTN_MOMO_API_USER=your-mtn-api-user
MTN_MOMO_API_KEY=your-mtn-api-key
MTN_MOMO_ENVIRONMENT=sandbox
MTN_MOMO_CALLBACK_URL="${APP_URL}/api/webhooks/mtn-momo"

# ============================================
# AIRTEL MONEY
# ============================================

AIRTEL_MONEY_BASE_URL=https://openapiuat.airtel.africa
AIRTEL_MONEY_CLIENT_ID=your-airtel-client-id
AIRTEL_MONEY_CLIENT_SECRET=your-airtel-client-secret
AIRTEL_MONEY_ENVIRONMENT=sandbox
AIRTEL_MONEY_CALLBACK_URL="${APP_URL}/api/webhooks/airtel-money"

# ============================================
# STRIPE (International cards)
# ============================================

STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# ============================================
# PUSHER (Real-time)
# ============================================

PUSHER_APP_ID=your-pusher-app-id
PUSHER_APP_KEY=your-pusher-key
PUSHER_APP_SECRET=your-pusher-secret
PUSHER_APP_CLUSTER=eu

# ============================================
# FIREBASE (Push Notifications)
# ============================================

FIREBASE_CREDENTIALS=firebase-credentials.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# ============================================
# GOOGLE MAPS
# ============================================

GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ============================================
# SENTRY (Error Tracking)
# ============================================

SENTRY_LARAVEL_DSN=https://your-sentry-dsn
SENTRY_TRACES_SAMPLE_RATE=1.0

# ============================================
# AWS S3 (File Storage)
# ============================================

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-west-1
AWS_BUCKET=toptopgo-files
AWS_USE_PATH_STYLE_ENDPOINT=false

# Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1

# Firebase (Notifications Push)
FIREBASE_CREDENTIALS=
FIREBASE_PROJECT_ID=

# Laravel Reverb (WebSocket)
REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# Storage (Cloudinary ou S3)
FILESYSTEM_DISK=public
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# TopTopGo Config
TOPTOPGO_COMMISSION_RATE=0.20
TOPTOPGO_MIN_WITHDRAWAL=500
TOPTOPGO_GPS_INTERVAL=10
